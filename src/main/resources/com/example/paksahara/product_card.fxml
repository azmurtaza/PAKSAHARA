<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.paksahara.controller.ProductCardController"
      spacing="10" style="-fx-background-color: white; -fx-padding: 10;"
      prefWidth="300">
    <ImageView fx:id="productImage" fitWidth="280" fitHeight="180" preserveRatio="true"/>
    <Label fx:id="titleLabel" style="-fx-font-weight: bold;"/>
    <Label fx:id="priceLabel"/>
    <Label fx:id="stockLabel"/>
    <HBox spacing="10">
        <Button text="Edit" onAction="#handleEdit"/>
        <Button text="Delete" onAction="#handleDelete" style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
    </HBox>
</VBox>