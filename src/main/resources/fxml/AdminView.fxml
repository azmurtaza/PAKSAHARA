<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.paksahara.controller.AdminViewController"
            prefWidth="800" prefHeight="600"
            style="-fx-padding: 10;">

    <top>
        <HBox style="-fx-background-color: #1a237e; -fx-padding: 15;">
            <Label text="PAK-SAHARA Admin Dashboard"
                   style="-fx-font-size: 24px; -fx-text-fill: white; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <center>
        <!-- Optional: Remove TableView if not needed -->
        <TableView fx:id="productTableAdmin" visible="false">
            <columns>
                <TableColumn fx:id="colIdAdmin" text="ID" prefWidth="50"/>
                <TableColumn fx:id="colNameAdmin" text="Name" prefWidth="200"/>
                <TableColumn fx:id="colPriceAdmin" text="Price" prefWidth="150"/>
            </columns>
        </TableView>

        <ScrollPane fitToWidth="true">
            <VBox fx:id="productsContainer" spacing="15" style="-fx-padding: 15;"/>
        </ScrollPane>
    </center>

    <bottom>
        <VBox spacing="10" style="-fx-padding: 10;">
            <HBox spacing="10" alignment="CENTER_LEFT">
                <TextField fx:id="nameField" promptText="Product Name" prefWidth="200"/>
                <TextField fx:id="priceField" promptText="Price" prefWidth="150"/>
                <Button text="Add Product" fx:id="addProductButton"
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white;"
                        onAction="#handleAddProduct"/>
            </HBox>

            <HBox alignment="CENTER_RIGHT" spacing="10">
                <Button text="Logout" fx:id="logoutButton"
                        style="-fx-background-color: #616161; -fx-text-fill: white;"
                        onAction="#handleLogout"/>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>