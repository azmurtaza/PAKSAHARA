<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.paksahara.controller.CustomerViewController"
            prefWidth="1100" prefHeight="700"
            style="-fx-background-color: #f0f2f5;">

    <top>
        <HBox style="-fx-background-color: #1a237e; -fx-padding: 15;">
            <Label text="PAK-SAHARA Customer Dashboard"
                   style="-fx-font-size: 24px; -fx-text-fill: white; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true">
            <VBox fx:id="productsContainer" spacing="15" style="-fx-padding: 15;"/>
        </ScrollPane>
    </center>

    <bottom>
        <VBox spacing="15" style="-fx-padding: 15; -fx-background-color: white; -fx-background-radius: 10;">
            <HBox spacing="20" alignment="CENTER_LEFT">
                <Button text="Checkout" fx:id="checkoutButton"
                        style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20;"
                        onAction="#handleCheckout"/>
                <Label fx:id="cartTotalLabel" text="Cart Total: â‚¨0.00"
                       style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-text-fill: #1a237e;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Logout" fx:id="logoutButton"
                        style="-fx-background-color: #616161; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20;"
                        onAction="#handleLogout"/>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>
